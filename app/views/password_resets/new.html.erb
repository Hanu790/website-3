<h1>Reset password!</h1>
<p>Please enter your email.</p>
<fieldset>
	<%= form_tag password_resets_path, :method => :post do %>
		<div class="field">
			<%= label_tag :email %>
			<%= text_field_tag :email %>
		</div>
		<div class="actions"><%= submit_tag "Reset password" %></div>
	<% end %>
</fieldset>
