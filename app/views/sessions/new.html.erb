<h1>Sign in</h1>
<div class="container">
	<div class="row">
		<div class="span6 offset3">

 			<%= form_for(:session, url: sessions_path) do |f| %>
				<fieldset>
					<legend>Sign in</legend>
					<%= f.label :email %>
					<%= f.text_field :email %>
					<%= f.label :password %>
					<%= f.password_field :password %>
					<p><%= link_to "forgot password?", new_password_reset_path  %></p>
					<%= f.check_box :remember_me, {},1 %><%= f.label :remember_me, "Remember me" %>
					<%= f.submit "Sign in", class: "btn" %>
					<br/> New user? <%= link_to "Sign Up now!", signup_path %>		
				</fieldset>
			<% end %>


