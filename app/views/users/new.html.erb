<div class="container-fluid">
	<div class="row-fluid">
		<div class="span4 offset3">
			<form class="form-horizontal well fluid">
				<fieldset>
					<legend>Sign up</legend>
					<label>Name</label>
						<input type="text" id="inputName" placeholder="Type your name">
					<label>Email</label>
						<input type="text"  id="inputEmail" placeholder="Type your email">
					<label> Password</label>
						<input type="password" id="inputPassword" placeholder="Type your password">
					<label>Password confirmation</label>
						<input type="password" id="inputPasswordConfirmation" placeholder="Type password confirmation">
					<button type="submit" class="btn">Sign up</button>
				</fieldset>
			</form>
		</div>
	</div>
</div>
